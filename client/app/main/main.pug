header#banner.banner-img
  .bg-image-container
    .contrast-mask
  .banner-title
    h1 Magic Leap
    p.lead Welcome to the future

.container
  div.row
    div.zipper(ng-repeat='post in $ctrl.posts | orderBy:datetime:true')
      div.col-sm-12.col-lg-6.col-md-8.center.post
        a(ui-sref='post({id: post._id})')
          h2 {{post.title}}
          h3 {{post.subtitle}}
          span.meta Posted by 
          span.meta
            b {{post.username}} 
          span.meta on 
          span.meta
            b {{post.datetime | date}}
        hr