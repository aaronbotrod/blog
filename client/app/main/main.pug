header#banner
  .bg-image-container
    .contrast-mask
    img#banner-img(src='/assets/images/magic-leap-whale-jump.jpg', alt='Magic Leap Whale Jump')
  .banner-title
    h1 Magic Leap
    p.lead Welcome to the future

.container
  div.row
    div.zipper(ng-repeat='post in $ctrl.posts')
      div.col-lg-6.col-md-8.center.post
        a(ui-sref='post({id: post._id})')
          h2 {{post.title}}
          h3 {{post.content}}
          p.meta.text-secondary Posted by {{post.username}} on {{post.datetime | date}}
        hr